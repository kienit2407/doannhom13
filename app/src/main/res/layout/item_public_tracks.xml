<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background3"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="5dp"
    xmlns:axndroid="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:padding="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/imgThumbnails"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/user" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="233dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="6dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Hay trao cho anh - son tung"
            android:textColor="@color/textColorButton"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtArtist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:text="trung kien"
            android:textColor="@color/textColorButton"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/txtNameUploader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Trung kien"
                android:textColor="@color/textColorButton"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="•"
                android:textColor="@color/textColorButton" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="13dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/view2" />

            <TextView
                android:id="@+id/txtLuotxem"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="center"
                android:text="4 lượt nghe"
                android:textColor="@color/textColorButton"
                android:textSize="10sp" />

        </LinearLayout>

    </LinearLayout>
    <ImageView
        android:id="@+id/imgbuttonAddPlaylist"
        android:layout_width="29dp"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/add_playlist2" />

</LinearLayout>