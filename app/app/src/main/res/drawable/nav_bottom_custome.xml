<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#00F5A0"
                android:centerColor="#31E7CB"
                android:endColor="#00D9F5"
                android:angle="60"/>
            <corners android:radius="70dp"/>
            <padding
                android:bottom="4dp"
                android:left="4dp"
                android:right="4dp"
                android:top="4dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#F7F4FE"/>
            <corners android:radius="66dp"/>
        </shape>
    </item>
</layer-list>